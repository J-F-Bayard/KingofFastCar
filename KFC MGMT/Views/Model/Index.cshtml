@model IEnumerable<KFC_MGMT.Controllers.GetModelForm>

@{
    ViewBag.Title = "Index";
}

<h2>Liste des modèles</h2>

<p>
    @Html.ActionLink("Nouveau modèle", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.BrandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.BrandName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.IdModel }) |
            @Html.ActionLink("Détails", "Details", new { id=item.IdModel }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.IdModel })
        </td>
    </tr>
}

</table>
